# Eco Agent Configuration
# DO NOT MODIFY - Agent is read-only to these settings

# Logging
LOG_LEVEL=info

# Redis Configuration (for task queue)
REDIS_URL=redis://127.0.0.1:6379

# Database
DB_PATH=./agent.db

# ============================================================================
# SCHEDULING MODE - Choose one
# ============================================================================
# 'renewable'   = Prioritize direct solar/wind (off-grid friendly)
# 'grid-aware'  = Use grid carbon intensity data (most practical)
# 'hybrid'      = Solar first, fallback to grid carbon (RECOMMENDED)
# 'off-peak'    = Traditional fixed hours (2-5 AM, weekends)
# ============================================================================
SCHEDULING_MODE=hybrid

# ============================================================================
# RENEWABLE ENERGY CONFIGURATION
# ============================================================================

# Direct Solar Connection (if you have rooftop PV)
DIRECT_SOLAR_WATTS=0
# Set to your system capacity (e.g., 5000 for 5kW system)
# 0 = no direct solar connection

# Grid Carbon Intensity API
# Options: electricity-maps | watttime | grid-operator | none
GRID_CARBON_API=electricity-maps
GRID_CARBON_API_KEY=
# Free: Sign up at electricitymap.org or watttime.org

# Your Region/Zone Code
GRID_CARBON_ZONE=US-CA
# Examples: US-CA, US-TX, DE, FR, GB, NO
# Find your code at: api.electricitymap.org/v3/zones

# Carbon Intensity Thresholds
MAX_GRID_CARBON_INTENSITY=500
# kg CO2/MWh - defer if above this threshold
# < 300 = very clean (hydro, nuclear, wind)
# > 600 = very dirty (coal-heavy)

MIN_RENEWABLE_PERCENT=40
# Only execute if grid has >= 40% renewable

# Solar/Wind Peak Hours
SOLAR_PEAK_HOURS=9,10,11,12,13,14,15
# 9 AM - 3 PM (adjust for your latitude)

WIND_PEAK_HOURS=0,1,2,3,4,5,6
# 12 AM - 6 AM (wind often peaks at night)

# ============================================================================
# BATTERY STORAGE (optional, if you have Powerwall/LG Chem/etc)
# ============================================================================
BATTERY_ENABLED=false
BATTERY_TYPE=tesla-powerwall
# Options: tesla-powerwall | lg-chem | generac | none

BATTERY_IP=192.168.1.150
BATTERY_MIN_SOC=20
# Minimum state of charge (%) - don't execute if below this

# Local Smart Meter (optional, for real-time data)
LOCAL_METER_IP=
LOCAL_METER_PORT=502
# Modbus TCP for smart meters (read solar + grid draw)

# ============================================================================
# SCHEDULER SETTINGS
# ============================================================================

OFF_PEAK_HOURS=2,3,4,5
CPU_THRESHOLD=60
MEMORY_THRESHOLD=70
DISK_IO_THRESHOLD=50
MAX_CONCURRENT_TASKS=2

# Task Whitelist (comma-separated, locked from agent modification)
ALLOWED_TASKS=database-cleanup,index-optimization,cache-warming,log-rotation,metrics-aggregation,backup-verification,report-generation

# ============================================================================
# EXECUTION CONSTRAINTS
# ============================================================================
MAX_TASK_DURATION_MS=3600000
MAX_MEMORY_USAGE_MB=500
ALLOW_NETWORK_ACCESS=false
ALLOW_CONFIG_MODIFICATION=false

# ============================================================================
# FEATURES
# ============================================================================
FEEDBACK_ENABLED=true
LEARNING_MODE=true

# Audit
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=./logs/audit.log
